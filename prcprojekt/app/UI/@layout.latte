<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{ifset $title}{include $title|stripHtml} | {/ifset}RPG Character Manager</title>
   <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700&display=swap" rel="stylesheet">


    <!-- Link to your custom CSS -->
    <link rel="stylesheet" href="{$basePath}/css/style.css">
</head>

<body>
    <div class="container">
        <!-- Epic Title for RPG Website -->
        <h1 class="epic-title">RPG Character Manager</h1>

    
       

        <!-- Flash messages -->
        <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}" role="alert">
            {$flash->message}
        </div>

        <!-- Main content -->
        <main>
            {include content}
        </main>
    </div>

    {block scripts}
    <!-- Nette Forms Script -->
    <script src="https://unpkg.com/nette-forms@3"></script>
    {/block}
</body>
</html>
